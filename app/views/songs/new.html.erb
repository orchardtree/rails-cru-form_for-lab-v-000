<h1>New Song</h1>
<%= form_for(@song) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %></br>
</br>
  <%= f.label :artist %></br>
  <%= f.text_field :song[artist_id] %></br>
  <% @artists.each do |artist| %>
    <p><%= f.radio_button :artist, artist.id %><%= artist.name %></p>
  <% end %>
</br>
  <%= f.label :Genre %>
  <% @genres.each do |genre| %>
    <p><%= f.radio_button :genre, genre.id %><%= genre.name %></p>
  <% end %>
  <%= f.submit %>
<% end %>
